    <option>Bridal Mehndi</option>
    <option>Engagement Mehndi</option>
    <option>Festival Mehndi</option>
    <option>Party Mehndi</option>
    <option>Kids Mehndi</option>
  </select>
  <textarea name="message" rows="3" placeholder="Tell us more about your event or style preference..."></textarea>
  <button type="submit" class="btn btn-warning w-100 fw-bold">Submit Appointment</button>
</form>

      </div>
    </div>
  </div>
</section>



<!-- AOS Init Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
  AOS.init();
</script>
<script>
  document.getElementById('appointment-form').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await fetch('/send-appointment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const text = await response.text();
      alert(text);

      if (response.ok) {
        this.reset();
      }
    } catch (error) {
      alert('Error submitting appointment. Please try again later.');
      console.error(error);
    }
  });
</script>


